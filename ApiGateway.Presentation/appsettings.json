{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.ReverseProxy": "Information"
    }
  },

  "SwaggerEndpoints": [
    {
      "name": "Identity API",
      "url": "/identity/swagger/default/swagger.json"
    },
    {
      "name": "Product API",
      "url": "/product/swagger/default/swagger.json"
    }
  ],

  "ReverseProxy": {
    "Routes": {
      "identity-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/identity/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/identity" },
          {
            "RequestHeader": "X-Forwarded-Prefix",
            "Set": "/identity"
          },
          {
            "RequestHeader": "Api-Gateway",
            "Set": "my-gateway"
          }

        ]
      },
      "product-route": {
        "ClusterId": "product-cluster",
        "Match": {
          "Path": "/product/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/product" },
          {
            "RequestHeader": "X-Forwarded-Prefix",
            "Set": "/product"
          },
          {
            "RequestHeader": "Api-Gateway",
            "Set": "my-gateway"
          }

        ]
      }
    },
    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "identity-service": {
            "Address": "http://localhost:8080/"
          }
        }
      },
      "product-cluster": {
        "Destinations": {
          "product-service": {
            "Address": "http://localhost:8081/"
          }
        }
      }
    }
  }
}
